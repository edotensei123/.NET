@model Order

<style>
    .form-group
    {
        margin-bottom: 20px;
    }
    
    .header
    {
        margin-top: 100px;
    }
</style>

<div class="row bg-dark offset-3 col-md-5 g-3">
    <h4 class="header text-light">Оформление заказа</h4>
    <p class="text-light">После обработки заказа вы будете переведены на страницу оплаты.</p>
<form asp-action="Checkout" method="post" class="form-horizontal">
  <div class="form-group">
    <input asp-for="ClientName" class="form-control" placeholder="Введите свое имя">
  </div>
  <div class="form-group">
    <input asp-for="Email" class="form-control" placeholder="Введите адрес электронной почты">
  </div>
  <input class="btn btn-success" type="submit" value="Оформить заказ"/>
</form>
</div>